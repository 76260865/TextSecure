        android:widgetLayout="@layout/preference_widget_personal_info" />
    <org.thoughtcrime.securesms.preferences.TextItemPreference
        android:key="pref_name"
        android:persistent="true"
        android:summary=""
        android:title="@string/personal_info_name"
        android:widgetLayout="@layout/preference_widget_personal_info" />
    <org.thoughtcrime.securesms.preferences.TextItemPreference
        android:key="pref_signature"
        android:persistent="true"
        android:summary=""
