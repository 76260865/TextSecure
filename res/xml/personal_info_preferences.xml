        android:persistent="true"
        android:summary=""
        android:title="@string/personal_info_avatar"
        android:widgetLayout="@layout/preference_widget_personal_avatar" />
    <ListPreference
        android:key="pref_gender"
        android:title="@string/personal_info_gender"
        android:dialogTitle="@string/personal_info_gender_dialog_title"
        android:entries="@array/gender_opts"
        android:entryValues="@array/gender_opts_values"/>e
    <org.thoughtcrime.securesms.preferences.TextItemPreference
